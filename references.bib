  journal          = {Atmospheric Environment},
  keywords         = {aerosol, central mediterranean, erythemal ultraviolet irradiance, total ozone column, total solar shortwave irradiance, water vapour column},
  modificationdate = {2023-05-10T00:42:36},
  owner            = {AN},
  timestamp        = {2022-10-15},
  year             = {2014},
}

@Article{Xia2007,
  author           = {Xiangao Xia and Hongbin Chen and Zhanqing Li and Pucai Wang and Jiankai Wang},
